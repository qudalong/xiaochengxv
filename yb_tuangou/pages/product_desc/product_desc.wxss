@import "../../utils/wxParse/wxParse.wxss";
.cover-detail {
  width: 100%;
  background: #fff;
}

.good-info {
  padding: 10rpx 30rpx 20rpx;
  font-size: 30rpx;
  line-height: 1.6;
}
.flex{
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.fz{
  padding:14rpx 24rpx;
  background: #00B26A;
  color: #fff;
  border-radius: 6rpx;
}
.imgUrl {
  width: 100%;
  /* height: 150px; */
}

.row-line {
  margin: 20rpx 0;
}

.add-card {
  padding: 10rpx 20rpx;
  border-radius: 4rpx;
  color: #fff;
  font-size: 26rpx;
  background: #a5b730;
}

.details {
  text-align: justify;
  font-size: 26rpx;
  color: #666;
  line-height: 1.5;
  margin: 20rpx 0 10rpx;
}

.money {
  color: blue;
  font-size: 26rpx;
}

.cart-info {
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.downloadImg{
  position: fixed;
  bottom: 10%;
  left: 50%;
  transform: translateX(-50%);
  background: #00B26A;
  padding: 10rpx 14rpx;
  border-radius: 6rpx;
  color: #fff;
  z-index: 99999;
}
.downloadImg:hover{
  opacity: 0.8;
}
.bigImgBg{
  position: fixed;
  left: 0;
  top: 0;
  height:100%;
  width: 100%;
  background: #000;
}
.bigImg{
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%,-50%);
}
.title{
  font-size: 30rpx;
  font-weight: bold;
  text-align: center;
  margin: 10rpx 0;
}
.type{
  font-size: 30rpx;
}
.desc{
  margin-top: 10rpx;
}