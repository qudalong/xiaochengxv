/*弹窗  */
.dialog{
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  background: rgba(0,0,0,0.7);
  z-index: 10;
}
.center-con{
  position: absolute;
  width:70%;
  padding:30rpx;
  top: 50%;
  left: 50%;
  transform: translate(-50%,-50%);
  border-radius:10rpx;
  background: #fff;
  z-index: 9999;
}
.textarea{
  min-height: 260rpx;
  line-height: 1.6;
  width: 100%;
}
.submit{
  width: fit-content;
  transform: translateX(550%);
}
