.block {
}

.block .title {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 20rpx;
  color: #666;
  background: #f0f0f0;
}

.block .row {
  padding: 20rpx;
  display: flex;
  align-items: center;
  justify-content: flex-start;
  border-bottom: 1px solid #f0f0f0;
}

.row .label {
  color: #999;
  padding-right: 30rpx;
  min-width: 120rpx;
  text-align: right;
}

.row .cont {
  flex: 1;
}

.btn-grounp {
  display: flex;
  align-items: center;
  justify-content: flex-end;
}

.but {
  padding: 10rpx 16rpx;
  background: #ff6000;
  color: #fff;
  border-radius: 10rpx;
  margin-right: 30rpx;
}

.but1 {
  background: #2c9f67;
}

.but:hover {
  opacity: 0.8;
}
/*弹窗  */
.dialog{
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  background: rgba(0,0,0,0.7);
  z-index: 10;
}
.center-con{
  position: absolute;
  width:70%;
  padding:30rpx;
  top: 50%;
  left: 50%;
  transform: translate(-50%,-50%);
  border-radius:10rpx;
  background: #fff;
  z-index: 9999;
}
.textarea{
  min-height: 260rpx;
  line-height: 1.6;
  width: 100%;
}
.submit{
  width: fit-content;
  transform: translateX(550%);
}
.img{
  min-height: 300rpx;
  width: 100%;
}