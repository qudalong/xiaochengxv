      总览
    </view>
        <view class="zongshuliang">
            <view class="zongshuliang_number">
        {{info.log_order.total}}
      </view>
            <view class="zongshuliang_text">
        用户总数
      </view>
            <view class="zongshuliang_fengexian"></view>
        </view>
        <view class="zongshuliang">
