<view class="container">
    <view class="userinfo">
        <view bindtap="scancode" class="tupian" data-i="1">
            <image class="userinfo-hexiao" mode="cover" src="{{icon.hexiao}}"></image>
            <text class="wenzi">核销</text>
        </view>
        <view class="tupian">
            <image bindtap="scancode" class="userinfo-shouhuo" data-i="2" mode="cover" src="{{icon.shouhuo}}"></image>
