@import '../ckLevel/ckLevel';
.add-btn{
  position: fixed;
  right: 40rpx;
  bottom: 50rpx;
  color: #fff;
  font-size: 30px;
  height: 90rpx;
  width: 90rpx;
  border-radius: 50%;
  background: #2c9f67;
  text-align: center;
  line-height: 90rpx;
}
.add-btn:hover{
  opacity: 0.9;
}

.base-c2{
  color:#2c9f67
}

.base-c0 {
  color: blue;
}

.base-c1{
  color:red;
}


/*弹窗  */
.dialog{
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  background: rgba(0,0,0,0.7);
  z-index: 10;
}
.center-con{
  position: absolute;
  width:70%;
  padding:30rpx;
  top: 50%;
  left: 50%;
  transform: translate(-50%,-50%);
  border-radius:10rpx;
  background: #fff;
  z-index: 9999;
}
.textarea{
  min-height: 260rpx;
  line-height: 1.6;
  width: 100%;
}
.submit{
  width: fit-content;
  transform: translateX(550%);
}
