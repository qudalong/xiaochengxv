.list-wrap{
  display: flex;
  align-items: center;
  justify-content: space-around;
  padding: 40rpx 0;
  border-bottom:1px solid #f0f0f0; 
}
.title{
  background: #ff6000;
  color: #fff;
}
.list-wrap .item{
 flex: 1;
 text-align: center;
 font-size: 28rpx;
}
textarea{
  padding: 30rpx;
  line-height: 1.6;
}
.list{
   border-bottom:1px solid #f0f0f0; 
}
.list-wrap .last{
 flex: 2;
}
.list-wrap .item:active{
  opacity: 0.6;
}
.radio-group{
  display: flex;
  flex-direction: column;
  text-align: left;
  padding-left:40rpx; 
}
.radio-group label{
  margin-bottom: 10rpx;
}